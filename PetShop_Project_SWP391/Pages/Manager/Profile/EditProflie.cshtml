@page
@model PetShop_Project_SWP391.Pages.Manager.Profile.EditProflieModel
@section EditProflie{

<div class="container mt-3"@ViewData["message"]>
    <form asp-action="" method="post">
    <div class="card p-3 text-center">
        <h4>Chỉnh Sửa Thông Tin</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="inputs">
                    <input asp-for="employee.EmployeeId" type="hidden" />
                    <input asp-for="Account.EmployeeId" type="hidden" />
                    <input asp-for="Account.AccountId" type="hidden" />
                    <label>Họ</label> <input type="text" class="form-control"  asp-for="employee.LastName">
                </div>
            </div>
            <div class="col-md-6">
                <div class="inputs"> <label>Tên</label> <input type="text" class="form-control"  asp-for="employee.FirstName" > </div>
            </div>
            <div class="col-md-6">
                <div class="inputs"> <label>Địa Chỉ</label> <input type="text" class="form-control" asp-for="employee.Address" > </div>
            </div>
            <div class="col-md-6">
                <div class="inputs"> <label>Số Điện Thoại </label> 
                    <input class="form-control" type="text" asp-for="employee.Phone" oninput="checkPhoneNumberFormat"> 
                     <br />
                 <span id="phoneErrorSpan" style="color: red; text-align:center"></span>
                 <div class="msg-error" style="text-align:center;color:red; margin-top: 5px">
                    @ViewData["msgPhone"]
                 </div>
                 </div>
            </div>
             <div class="col-md-6">
                <div class="inputs"> <label>Ngày Sinh</label> 
                    <input type="text" class="form-control" asp-for="employee.BirthDate" value="@Model.employee.BirthDate?.ToShortDateString()">

                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

            </div>
        </div>
        <div class="mt-3 gap-2 d-flex justify-content-end"> 
           <a href="~/Manager/Profile/Index"class="px-3 btn btn-sm btn-outline-primary"> Cancel </a>
            <input  class="px-3 btn btn-sm btn-primary" type="submit" value="Save"/>
            <div class="msg-error" style="text-align:center;color:red">
                @ViewData["msgEmpty"]
            </div>
        </div>
    </div>
    </form>
</div>
